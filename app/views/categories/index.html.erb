<div class="container">
    <h1>Categorías</h1>
</div>

<div class="container">
    <ul>
        <% @categories.each do |category| %>
            <li><%= link_to category.name, category %> -- <%= link_to 'Editar', edit_category_path(category) %> | <%= link_to 'Eliminar', category, data: {turbo_method: :delete, turbo_confirm: 'Estás seguro?'} %></li>
        <% end %>
    </ul>
</div>

<div class="container">
    <div class="row">
    <%= link_to 'Nueva', new_category_path, class: 'col-md-4 offset-md-2' %>
    </div>
</div>